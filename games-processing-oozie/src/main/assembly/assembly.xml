<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <useDefaultExcludes>true</useDefaultExcludes>
            <directory>${project.basedir}/../game_bigdata/</directory>
            <outputDirectory>/data</outputDirectory>
        </fileSet>
        <fileSet>
            <useDefaultExcludes>true</useDefaultExcludes>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>workflow/lib</outputDirectory>
            <includes>
                <include>com.mkwhit:games-processing-crunch</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}-${project.parent.version}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>