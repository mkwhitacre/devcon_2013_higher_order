<workflow-app name="game-wf" xmlns="uri:oozie:workflow:0.4">
    <start to="game-job"/>
    <action name="game-job">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.mkwhit.Main</main-class>
            <arg>${vgChartzPath}</arg>
            <arg>${metacriticPath}</arg>
            <arg>${outputPath}</arg>
        </java>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
       <message>Something Bad Happened.</message>
    </kill>
    <end name="end"/>
</workflow-app>